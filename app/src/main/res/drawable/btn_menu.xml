<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorPrimary" />
            <stroke
                android:width="1.0dip"
                android:color="@color/colorPrimaryDark" />
            <corners
                android:topLeftRadius="3.0dip"
                android:topRightRadius="3.0dip"
                android:bottomLeftRadius="3.0dip"
                android:bottomRightRadius="3.0dip" />
            <padding
                android:left="8.0dip"
                android:top="8.0dip"
                android:right="8.0dip"
                android:bottom="8.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorPrimary" />
            <stroke
                android:width="1.0dip"
                android:color="@color/colorPrimaryIcons" />
            <corners
                android:topLeftRadius="3.0dip"
                android:topRightRadius="3.0dip"
                android:bottomLeftRadius="3.0dip"
                android:bottomRightRadius="3.0dip" />
            <padding
                android:left="8.0dip"
                android:top="8.0dip"
                android:right="8.0dip"
                android:bottom="8.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimaryDark"
                android:endColor="@color/colorPrimaryDark"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorPrimaryDark" />
            <stroke
                android:width="1.0dip"
                android:color="@color/colorBorderButton" />
            <corners
                android:topLeftRadius="3.0dip"
                android:topRightRadius="3.0dip"
                android:bottomLeftRadius="3.0dip"
                android:bottomRightRadius="3.0dip" />
            <padding
                android:left="8.0dip"
                android:top="8.0dip"
                android:right="8.0dip"
                android:bottom="8.0dip" />
        </shape>
    </item>
</selector>