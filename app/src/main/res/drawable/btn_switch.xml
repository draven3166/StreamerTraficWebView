<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/colorSecondaryIcons"
                android:endColor="@color/colorSecondaryIcons"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorSecondaryIcons" />
            <corners
                android:topLeftRadius="0.0dip"
                android:topRightRadius="0.0dip"
                android:bottomLeftRadius="4.0dip"
                android:bottomRightRadius="4.0dip" />
            <padding
                android:left="3.0dip"
                android:top="3.0dip"
                android:right="3.0dip"
                android:bottom="3.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorExtra"
                android:endColor="@color/colorExtra"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorExtra" />
            <corners
                android:topLeftRadius="0.0dip"
                android:topRightRadius="0.0dip"
                android:bottomLeftRadius="4.0dip"
                android:bottomRightRadius="4.0dip" />
            <padding
                android:left="3.0dip"
                android:top="3.0dip"
                android:right="3.0dip"
                android:bottom="3.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorSecondaryIcons"
                android:endColor="@color/colorSecondaryIcons"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorSecondaryIcons" />
            <corners
                android:topLeftRadius="0.0dip"
                android:topRightRadius="0.0dip"
                android:bottomLeftRadius="4.0dip"
                android:bottomRightRadius="4.0dip" />
            <padding
                android:left="3.0dip"
                android:top="3.0dip"
                android:right="3.0dip"
                android:bottom="3.0dip" />
        </shape>
    </item>
</selector>