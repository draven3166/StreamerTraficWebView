<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/colorSecondaryIcons"
                android:endColor="@color/colorSecondaryIcons"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorSecondaryIcons" />
            <stroke
                android:width="1.0dip"
                android:color="@color/colorPrimary" />
            <padding
                android:left="1.0dip"
                android:top="1.0dip"
                android:right="1.0dip"
                android:bottom="1.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorBorderButton"
                android:endColor="@color/colorBorderButton"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorBorderButton" />
            <stroke
                android:width="1.0dip"
                android:color="@color/colorPrimary" />
            <padding
                android:left="1.0dip"
                android:top="1.0dip"
                android:right="1.0dip"
                android:bottom="1.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="270.0"
                android:centerY="0.5"
                android:centerColor="@color/colorPrimary" />
            <stroke
                android:width="1.0dip"
                android:color="@color/colorPrimary" />
            <padding
                android:left="1.0dip"
                android:top="1.0dip"
                android:right="1.0dip"
                android:bottom="1.0dip" />
        </shape>
    </item>
</selector>