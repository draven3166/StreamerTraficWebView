<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2.0dp"
        android:layout_marginBottom="2.0dp"
        android:layout_marginRight="3.0dp"
        android:layout_marginLeft="3.0dp"
        android:gravity="center"
        android:layout_weight="0.85">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_logo"
            android:layout_height="@dimen/size_logo"
            android:scaleType="centerInside"
            android:padding="3dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="0.15" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:textSize="@dimen/size_listtitle"/>

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/size_listtitle"/>

        <TextView
            android:id="@+id/tv_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Frecuencia"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/size_listtitle"/>
    </LinearLayout>

</LinearLayout>